<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/popup_theme"
        android:theme="@style/base_toolbar">
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="IChat"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="20sp"/>-->
    </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:id="@+id/ll_checkadduser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_chat_showadduser"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="对方还不是您的好友，是否添加好友？"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_chat_add_user"
                android:background="@drawable/shape_green"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="添加"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFEEEEEE"
            android:orientation="vertical"
            android:visibility="visible">
            <ListView
                android:id="@+id/lv_chatlist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dip"
                    android:layout_weight="0.12"
                  >
                    <ImageView
                        android:id="@+id/iv_voice"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/voice"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_InputMsg"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="45dip"

                    android:background="@animator/edit_text"
                    android:hint="请输入内容"
                    android:inputType="textWebEditText"
                    android:text="" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="40dip"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_faceicon"
                        android:layout_width="40dp"
                        android:layout_height="40dip"
                        android:background="@drawable/faceicon"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_add"
                            android:layout_width="40dp"
                            android:layout_height="40dip"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/addicon"
                            android:visibility="visible"/>
                        <Button
                            android:id="@+id/btn_MsgSend"
                            android:background="@drawable/main_page_item_bg"
                            android:layout_gravity="center"
                            android:layout_width="45dp"
                            android:layout_height="35dip"
                            android:text=" 发送 "
                            android:textColor="@color/white"
                            android:visibility="invisible"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
