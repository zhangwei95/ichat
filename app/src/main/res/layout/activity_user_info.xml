<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userInfo"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/popup_theme"
        android:theme="@style/base_toolbar">
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="IChat"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="20sp"/>-->
    </android.support.v7.widget.Toolbar>
    <!--head-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/userinfo_iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/avatar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp">
            <TextView
                android:id="@+id/userinfo_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="一只可怜的单身狗"
                android:textColor="#001a00"
                android:textSize="20sp"

                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/userinfo_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:textSize="18sp"
                android:text="IChatNo："/>
        </LinearLayout>
    </LinearLayout>

    <!--center-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"

        android:layout_marginTop="20dp">
        <!--地区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/white"
            android:orientation="horizontal">
             <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                 android:textColor="#001a00"
                 android:text="地区"
                android:textSize="18sp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
            />
            <TextView
                android:id="@+id/tv_userinfo_address"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:text="浙江 温州"
                android:textSize="18sp"
                android:textColor="@color/gary"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <!--心情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@drawable/border_bg"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:textColor="#001a00"
                android:layout_height="match_parent"
                android:text="心情"
                android:textSize="18sp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_userinfo_sign"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:text="啦啦啦啦啦啦啦啦"
                android:textSize="18sp"
                android:textColor="@color/gary"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <!--朋友圈-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:text="朋友圈"
                android:textSize="18sp"
                android:textColor="#001a00"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/userinfo_tv_friendCircle"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:text="该功能暂未实现！"
                android:textSize="18sp"
                android:textColor="@color/gary"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <!--sendBtn-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_isfriendshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <Button
                android:id="@+id/userinfo_btn_sendMsg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_green"
                android:text="发消息"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <!--sendBtn-->
            <Button
                android:id="@+id/userinfo_btn_video"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_green"
                android:text="视频聊天"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_isnotfriendshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <Button
                android:id="@+id/userinfo_btn_addFriend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_green"
                android:text="添加好友"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_confirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <Button
                android:id="@+id/userinfo_btn_PassCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_green"
                android:text="通过验证"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/userinfo_btn_denyCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_red"
                android:text="拒绝"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
