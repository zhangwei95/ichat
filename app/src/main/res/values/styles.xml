<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>
    <style name="launchTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ToolbarTheme" parent="AppTheme.Base">
        <item name="colorPrimaryDark">#4B4B4B</item>
        <item name="colorPrimary">#4B4B4B</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="InfoEditTheme" parent="AppTheme.Base">
        <item name="colorPrimaryDark">#4B4B4B</item>
        <item name="colorPrimary">#4B4B4B</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="AvatarToolbar" parent="AppTheme.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimaryDark">#4B4B4B</item>
        <item name="colorPrimary">#4B4B4B</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="base_toolbar" parent="AvatarToolbar"/>
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="overlapAnchor">false</item>
    </style>
     <style name="divider_horizontal"> <!-- 水平分割线 -->
     <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">0.01dp</item>
      <item name="android:background">#d4d4d4</item>
     <item name="android:orientation">vertical</item>
</style>
    <!--  activity中head中样式设置，包括背景高度，宽度-->
    <style name="head_style">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/skinpic_blue_j</item>
    </style>
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">正在保存…</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="EditView" parent="AppTheme.Base">
        <item name="android:colorForeground">@color/gary</item>
    </style>
</resources>
